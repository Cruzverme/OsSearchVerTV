<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorVertvBackgroundDark"
tools:context="com.example.shield.ossearchvertv.Login">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Usuario"

    android:id="@+id/userLabelID"
    android:textColor="@color/colorVertvLetters"
    android:textSize="@dimen/tamanhoTextTitulo"
    android:layout_marginTop="47dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="13dp"
    android:layout_marginStart="13dp" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Digite Seu Usuario"
    android:textColorHint="@color/colorVertvLetters"
    android:textColor="@color/colorVertvLetters"
    android:id="@+id/usuarioID"
    android:layout_below="@+id/userLabelID"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="18dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Senha"
    android:id="@+id/passwordLabelID"
    android:textColor="@color/colorVertvLetters"
    android:textSize="@dimen/tamanhoTextTitulo"
    android:layout_marginTop="20dp"
    android:layout_below="@+id/usuarioID"
    android:layout_alignLeft="@+id/userLabelID"
    android:layout_alignStart="@+id/userLabelID" />

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/senhaID"
    android:hint="Digite sua Senha"
    android:textColorHint="@color/colorVertvLetters"
    android:textColor="@color/colorVertvLetters"
    android:inputType="textPassword"
    android:layout_below="@+id/passwordLabelID"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="18dp" />

<Button
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textSize="20sp"
    android:id="@+id/logarID"
    android:background="@color/colorVertvOrange"
    android:layout_below="@+id/senhaID"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="22dp" />

<TextView
    android:id="@+id/botao_cadastrarID"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorVertvLetters"
    android:text="Para primeiro acesso, clique na frase"
    android:textAlignment="center"
    android:textSize="20sp"
    android:layout_below="@+id/logarID"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="32dp" />

</RelativeLayout>
